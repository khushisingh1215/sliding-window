#include <bits/stdc++.h> 
int minimumOperations(vector < int > &arr, int n, int x) 
{
int sum=0;
int totalsum=0;
int i=0;
int j=0;
int ans=0;
for(int i=0;i<n;i++){
	totalsum += arr[i];
}
if(totalsum == x){
	return n;

}
totalsum=totalsum-x;
while(j<n){
	sum +=arr[j];
	while(i<j && sum>totalsum){
		sum -=arr[i];
		i++;
	}
	if(sum==totalsum){
		ans=max(ans,j-i+1);
	}
	j++;
}
if(ans==0){
	return -1;
}
return n-ans;

	    
}
